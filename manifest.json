{
    "manifest_version": 2,

    "name": "race-spoilers",
    "description": "Hide spoilers for Formula 1 races on reddit.com.",
    "version": "1.0",

    "background": {
        "page": "lib/background.html"
    },

    "content_scripts": [
        {
            "matches": ["*://*.reddit.com/*"],
            "css": ["lib/styles/racespoilers.css"],
            "js": [
                "node_modules/webextension-polyfill/dist/browser-polyfill.js",
                "lib/content-script.js"
            ]
        }
    ],

    "permissions": ["storage"],
    
    "web_accessible_resources": [
        "lib/utilities/log.js",
        "lib/data/f1-calendar-2021.json",
        "lib/images/*.png",
        "lib/fonts/TitilliumWeb-Regular.ttf"
    ]
}
