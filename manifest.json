{
    "manifest_version": 2,

    "name": "race-spoilers",
    "description": "Hide spoilers for Formula 1 races on reddit.com.",
    "version": "1.0",

    "background": {
        "page": "lib/background.html"
    },

    "browser_action": {
        "default_title": "Race Spoilers",
        "default_popup": "lib/popup.html"
    },

    "options_ui": {
        "page": "lib/options.html"
    },

    "content_scripts": [
        {
            "matches": ["*://*.reddit.com/*"],
            "css": ["lib/styles/racespoilers.css"],
            "js": [
                "lib/vendor/browser-polyfill.min.js",
                "lib/content-script.js"
            ]
        }
    ],

    "permissions": ["storage"],
    
    "web_accessible_resources": [
        "lib/data/f1-calendar-2021.json",
        "lib/defaults.js",
        "lib/fonts/TitilliumWeb-Regular.ttf",
        "lib/images/*.png",
        "lib/utilities/log.js",
        "lib/utilities/utilities.js"
    ]
}
